<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mark.zumo.client.customer">

    <application
        android:name=".CustomerClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_customer_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_customer_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".view.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.main.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".view.signup.SignUpActivity" />
        <activity android:name=".view.cart.CartActivity" />
        <activity android:name=".view.menu.MenuDetailActivity" />
    </application>

</manifest>