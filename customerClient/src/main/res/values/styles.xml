<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @transition/change_image_transform
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorDivider
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="m">@color/colorPrimaryLight</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextDark</item>
        <item name="android:borderlessButtonStyle">@style/AppTheme.NoActionBar.ButtonStyle</item>
        <item name="android:tabWidgetStyle">@style/AppTheme.NoActionBar.TabStyle</item>
        <item name="android:actionButtonStyle">@style/AppTheme.NoActionBar.ActionButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AppTheme.NoActionBar.ActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="background">@color/colorAccent</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorTextLight</item>
        <item name="tabTextColor">@color/colorSecondaryTextLight</item>
        <item name="tabTextAppearance">@style/TabTextLight</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="MenuOptionSelector">
        <item name="android:layout_margin">@dimen/menu_option_margin</item>
        <item name="android:background">@drawable/shape_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:padding">13dp</item>
    </style>

    <style name="CartMenuOptionNameText">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CartMenuOptionValueText">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorSecondaryTextLight</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
