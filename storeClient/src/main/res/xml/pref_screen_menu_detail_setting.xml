<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preference_category_menu_detail_menu">
        <EditTextPreference
            android:key="@string/preference_key_menu_detail_menu_name"
            android:persistent="false"
            android:title="@string/preference_title_menu_detail_menu_name" />

        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="@string/preference_key_menu_detail_menu_price"
            android:persistent="false"
            android:title="@string/preference_title_menu_detail_menu_price" />

        <MultiSelectListPreference
            android:key="@string/preference_key_menu_detail_menu_category"
            android:persistent="false"
            android:title="@string/preference_title_menu_detail_menu_category" />

        <MultiSelectListPreference
            android:key="@string/preference_key_menu_detail_menu_option"
            android:persistent="false"
            android:title="@string/preference_title_menu_detail_menu_option" />
    </PreferenceCategory>
</PreferenceScreen>