<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/order_card_view_margin"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    android:padding="@dimen/order_card_view_padding"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_weight="1"
    card_view:cardUseCompatPadding="true">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/number_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_title_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintEnd_toStartOf="@+id/number"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/number_description"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/number_description" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/date_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:text="@string/order_date_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:ellipsize="none"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/date_description"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/order_card_view_big_margin"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:text="@string/order_time_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/time_description"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:text="@string/order_item_name_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_item_name_description_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_description" />

    <android.support.constraint.Guideline
        android:id="@+id/item_quantity_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/colorTextDark"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_quantity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:text="@string/order_quantity_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_item_name_description_text_size"
        app:layout_constraintEnd_toStartOf="@+id/item_price_guide_line"
        app:layout_constraintStart_toEndOf="@+id/item_quantity_guide_line"
        app:layout_constraintTop_toBottomOf="@+id/date_description" />

    <android.support.constraint.Guideline
        android:id="@+id/item_price_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_price_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:text="@string/order_price_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_item_name_description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_price_guide_line"
        app:layout_constraintTop_toBottomOf="@+id/date_description" />

    <View
        android:id="@+id/menu_option_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/order_card_view_small_margin"
        android:background="@color/colorTextDark"
        app:layout_constraintTop_toBottomOf="@+id/item_name_description" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_detail_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/order_card_view_small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/total_divider"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/menu_option_divider" />

    <View
        android:id="@+id/total_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:background="@color/colorTextDark"
        app:layout_constraintBottom_toTopOf="@+id/total_description"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_recycler_view"
        app:layout_constraintVertical_bias="0" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/order_total_price_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toTopOf="@+id/complete_button"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="none"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toTopOf="@+id/complete_button"
        app:layout_constraintEnd_toStartOf="@+id/item_price_guide_line"
        app:layout_constraintStart_toEndOf="@+id/item_quantity_guide_line" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="none"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toTopOf="@+id/complete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_price_guide_line" />

    <android.support.constraint.Guideline
        android:id="@+id/complete_button_start_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.125" />

    <android.support.constraint.Guideline
        android:id="@+id/complete_button_end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/complete_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/order_control_button_height"
        android:background="@color/colorAccent"
        android:text="@string/order_complete_button_text"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/complete_button_end_guide"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/complete_button_start_guide" />

</android.support.constraint.ConstraintLayout>