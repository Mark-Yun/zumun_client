<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    android:isScrollContainer="true"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_weight="1"
    card_view:cardUseCompatPadding="true">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/number_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_title_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintEnd_toStartOf="@+id/number"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/number_description"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_description" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/date_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:text="@string/order_date_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/date_description"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/order_card_view_big_margin"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:text="@string/order_time_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_date_text_size"
        app:layout_constraintStart_toEndOf="@+id/time_description"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/reject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:background="@drawable/bordered_button_reject"
        android:text="@string/requested_order_reject_button_text"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/requested_order_card_view_reject_button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_description" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:text="@string/order_item_name_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_item_name_description_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reject" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_quantity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:text="@string/order_quantity_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_card_view_item_name_description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reject" />

    <View
        android:id="@+id/menu_option_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/order_card_view_small_margin"
        android:background="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_description" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/option_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_small_margin"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_option_divider" />

    <View
        android:id="@+id/total_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/order_card_view_small_margin"
        android:background="@color/colorTextDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_recycler_view" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:text="@string/order_total_price_description"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/order_card_view_big_margin"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintEnd_toStartOf="@+id/total_price"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/total_description"
        app:layout_constraintTop_toBottomOf="@+id/total_divider" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/order_card_view_big_margin"
        android:layout_marginTop="@dimen/order_card_view_medium_margin"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/order_number_description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/total_quantity"
        app:layout_constraintTop_toBottomOf="@+id/total_divider" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_card_view_big_margin"
        android:background="@drawable/bordered_button_accept"
        android:text="@string/requested_order_accept_button_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/requested_order_card_view_reject_button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_description" />

</android.support.constraint.ConstraintLayout>